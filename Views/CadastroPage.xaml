<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemBiblioteca.Views.CadastroPage"
             Title="Cadastre-se"
             BackgroundColor="#F0F0F0">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30,40,30,30">

            <!-- Título -->
            <Label Text="Cadastre-se" 
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Campos do formulário -->
            <VerticalStackLayout Spacing="15">
                <Label Text="Nome Completo" FontSize="16"/>
                <Entry Placeholder="Seu nome completo" BackgroundColor="White"/>

                <Label Text="E-mail Institucional" FontSize="16"/>
                <Entry Placeholder="exemplo@institucional.com" Keyboard="Email" BackgroundColor="White"/>

                <Label Text="CPF" FontSize="16"/>
                <Entry Placeholder="000.000.000-00" Keyboard="Numeric" BackgroundColor="White"/>

                <Label Text="Telefone" FontSize="16"/>
                <Entry Placeholder="(00) 00000-0000" Keyboard="Telephone" BackgroundColor="White"/>

                <Label Text="Senha" FontSize="16"/>
                <Entry Placeholder="********" IsPassword="True" BackgroundColor="White"/>

                <Label Text="Confirmar Senha" FontSize="16"/>
                <Entry Placeholder="********" IsPassword="True" BackgroundColor="White"/>
            </VerticalStackLayout>

            <!-- Botão de Cadastrar -->
            <Button Text="CADASTRAR"
                    BackgroundColor="#1E88E5"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnRegisterClicked"/>

            <!-- Link para Login -->
            <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                <Label Text="Já tem uma conta?"/>
                <Label Text="Faça seu login."
                       TextColor="#1E88E5"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoginTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>