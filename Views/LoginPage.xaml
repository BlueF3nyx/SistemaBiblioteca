<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaBiblioteca.Views.LoginPage"
             Title="Login"
             BackgroundColor="#F0F0F0">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <Label Text="Login" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="E-mail" Keyboard="Email" BackgroundColor="White" />

        <Entry x:Name="SenhaEntry" Placeholder="Senha" IsPassword="True" BackgroundColor="White" />

        <Button Text="Entrar"
                BackgroundColor="#1E88E5"
                TextColor="White"
                FontSize="18"
                HeightRequest="50"
                CornerRadius="10"
                Clicked="OnLoginClicked" />

    </VerticalStackLayout>

</ContentPage>
